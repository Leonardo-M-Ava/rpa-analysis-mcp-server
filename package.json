{
  "name": "rpa-analysis-mcp-server",
  "version": "1.0.0",
  "description": "Server MCP per analisi funzionale RPA da video",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-esm src/server.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "docker:build": "docker build -t rpa-analysis-mcp .",
    "docker:run": "docker run -p 3000:3000 --env-file .env rpa-analysis-mcp",
    "azure:deploy": "./scripts/deploy.sh"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@azure/openai": "^1.0.0-beta.12",
    "fluent-ffmpeg": "^2.1.2",
    "docx": "^8.5.0",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "jimp": "^0.22.10",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  },
  "keywords": ["mcp", "rpa", "power-automate", "azure-openai", "video-analysis"],
